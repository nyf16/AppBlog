<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.Description" />
    <meta name="keywords" content="@ViewBag.Keywords" />

    <environment include="Development">
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>
    <environment include="Production">
        <link href="~/css/site.min.css" rel="stylesheet" />
    </environment>
</head>
<body oncontextmenu="return false">
    <div>
        <nav>

            <a asp-controller="Home" asp-action="Index">Ana Sayfa</a>
            <a asp-controller="Home" asp-action="Index" asp-route-category="Development">Development</a>


            @if (User.Identity.IsAuthenticated)
            {
                @if (User.IsInRole("Admin"))
                {

                    <a asp-controller="Panel" asp-action="Index" asp-route-category="Panel">Admin Panel</a>
                }
                <a asp-controller="Auth" asp-action="Logout">Çıkış Yap</a>
            }
            else
            {
                <a asp-controller="Auth" asp-action="Login">Oturum Aç</a>
            }
        </nav>
    </div>
    <div>
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
